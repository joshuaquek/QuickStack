{
  "name": "quickstack",
  "version": "1.0.0",
  "description": "Production-grade NodeJS web application template using - React (Front-end), NextJS (Routing), Express (Back-end), LokiJs (Shared Cache), PassportJs (Auth) and Knex (Database Connector)",
  "repository": "https://github.com/joshuaquek/QuickStack.git",
  "main": "server.js",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5.3.0"
  },
  "private": true,
  "scripts": {
    "---------------": " ------------------- START COMMANDS ------------------- ",
    "start": "echo '!! -------- Please use `npm run dev`, `npm run prod` or `npm run PM2` to start the app! -------- !!'",
    "dev": "rimraf ./client/.next/; next build client; nodemon -q -L ./server/index.js;",
    "prod": "rimraf ./client/.next/; next build client; NODE_ENV=production node ./server/index.js;",
    "--------------": " ------------------- Run on PM2 (Production) ------------------- ",
    "pm2": "rimraf ./client/.next/; next build client; NODE_ENV=production pm2 start ./server/index.js;",
    "-------------": " ------------------- DEVELOPER TOOLS ------------------- ",
    "build": "next build client",
    "package-versions": "npm list --depth=0"
  },
  "author": "Joshua Quek",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "connect-loki": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "helmet": "^3.15.0",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.15.2",
    "lodash": "^4.17.11",
    "lokijs": "^1.5.5",
    "morgan": "^1.9.1",
    "next": "^7.0.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.7.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-easy-state": "^5.1.0",
    "signale": "^1.3.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "nodemon": "^1.18.7",
    "rimraf": "2.6.2",
    "standard": "^11.0.1"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
