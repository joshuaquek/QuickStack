{
  "name": "QuickStack",
  "version": "1.0.0",
  "description": "Production-grade NodeJS web application template using - React (Frontend), NextJS (Routing), Express (Server), LokiJs(Shared Cache), Permit (Auth) and Mongo (Database)",
  "repository": "https://github.com/joshuaquek/QuickStack.git",
  "main": "server.js",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5.3.0"
  },
  "private": true,
  "scripts": {
    "build-server": "rimraf ./server/.next/;flow-remove-types --pretty ./server/ --out-dir ./server/.next/ --ignore ./server/.next/;",
    "dev": "nodemon ./server/.next/server.js;",
    "start": "next build client;npm build-server;NODE_ENV=production node ./server/.next/server.js;",
    "flow": "flow"
  },
  "author": "Joshua Quek",
  "license": "BSD-2-Clause",
  "dependencies": {
    "bluebird": "^3.5.1",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "next": "^5.1.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1"
  },
  "devDependencies": {
    "babel-eslint": "8.2.1",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "flow-bin": "0.64.0",
    "flow-remove-types": "1.2.3",
    "nodemon": "^1.17.3",
    "rimraf": "^2.6.2"
  }
}
