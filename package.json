{
  "name": "quickstack",
  "version": "1.0.0",
  "description": "Production-grade NodeJS web application template using - React (Front-end), NextJS (Routing), Express (Back-end), LokiJs (Shared Cache), PassportJs (Auth) and Mongo (Database)",
  "repository": "https://github.com/joshuaquek/QuickStack.git",
  "main": "server.js",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5.3.0"
  },
  "private": true,
  "scripts": {
    "------------": " ------------------- RUN IN PRODUCTION ------------------- ",
    "start": "rimraf ./client/.next/; next build client; NODE_ENV=production node ./server/index.js;",
    "dev": "rimraf ./client/.next/; next build client; nodemon -q -L ./server/index.js;",
    "build": "next build client",
    "-------------": " ------------------- DEVELOPER TOOLS ------------------- ",
    "package-versions": "npm list --depth=0",
    "--------------": " ------------------- HELPER SCRIPTS (DO NOT CHANGE) ------------------- "
  },
  "author": "Joshua Quek",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "mongoose": "^5.1.3",
    "next": "^7.0.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-easy-state": "^5.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "nodemon": "1.17.5",
    "rimraf": "2.6.2",
    "standard": "^11.0.1"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
