{
  "name": "quickstack",
  "version": "1.0.0",
  "description": "Production-grade NodeJS Webapp Template",
  "repository": "https://github.com/joshuaquek/QuickStack.git",
  "main": "server.js",
  "engines": {
    "node": ">=8.9.0",
    "npm": ">=5.3.0"
  },
  "private": true,
  "scripts": {
    "start": "echo '!! ------------------------------------------------------ Please open package.json for the proper start scripts to start the app! ----------------------------------------------- !!'",
    "------": "                                                                                                                                                                                          ",
    "-------": "                                                                                                                                                                                         ",
    "-------------": " -------------------------------------------------------------------- START WHOLE STACK AS MONOLITH ------------------------------------------------------------------------------ ",
    "linux": "docker build -t quickstack .;  docker run -it --rm --name my-running-monolith quickstack ;                                                                                                 ",
    "dev": "rimraf ./client/.next/; next build client; NODE_ENV=development ARCHITECTURE=monolith nodemon -q -L ./server/index.js;                                                                       ",
    "staging": "rimraf ./client/.next/; next build client; NODE_ENV=production ARCHITECTURE=monolith node ./server/index.js;                                                                             ",
    "prod": "rimraf ./client/.next/; next build client; pm2 delete quickstack-monolith; NODE_ENV=production ARCHITECTURE=monolith pm2 start --name quickstack-monolith ./server/index.js;                ",
    "----------": "                                                                                                                                                                                      ",
    "---------": "                                                                                                                                                                                       ",
    "----------------": " -------------------------------------------------- START WHOLE STACK AS SEPARATE MICROSERVICES ON CURRENT MACHINE ------------------------------------------------------------ ",
    "microsvcs-dev": "npm run build; npm run microsvcs-nextjs-dev; npm run microsvcs-api-server-dev                                                                                                      ",
    "microsvcs-prod": "npm run build; npm run microsvcs-nextjs-prod; npm run microsvcs-api-server-prod                                                                                                   ",
    "----": "                                                                                                                                                                                            ",
    "-----": "                                                                                                                                                                                           ",
    "--------------": " ------------------------------------------ START NEXTJS MICROSERVICE ONLY (Frontend NextJs Client & Backend NextJs SSR server only) -------------------------------------------- ",
    "nextjs-dev": "npm run build; next build client; NODE_ENV=development ARCHITECTURE=nextjs-microservice nodemon -q -L ./server/index.js;                                                              ",
    "nextjs-staging": "npm run build; next build client; NODE_ENV=production ARCHITECTURE=nextjs-microservice node ./server/index.js;                                                                    ",
    "nextjs-prod": "npm run build; next build client; pm2 delete quickstack-nextjs; NODE_ENV=production ARCHITECTURE=nextjs-microservice pm2 start --name quickstack-nextjs ./server/index.js;           ",
    "-": "                                                                                                                                                                                               ",
    "--------": "                                                                                                                                                                                        ",
    "---------------": " ---------------------------------------------------------- START API SERVER MICROSERVICE ONLY (API server only) --------------------------------------------------------------- ",
    "api-dev": "npm run build; next build client; NODE_ENV=development ARCHITECTURE=api-server-microservice nodemon -q -L ./server/index.js;                                                             ",
    "api-staging": "npm run build; next build client; NODE_ENV=production ARCHITECTURE=api-server-microservice node ./server/index.js;                                                                   ",
    "api-prod": "npm run build; next build client; pm2 delete quickstack-api-server; NODE_ENV=production ARCHITECTURE=api-server-microservice pm2 start --name quickstack-api-server ./server/index.js;  ",
    "---": "                                                                                                                                                                                             ",
    "--": "                                                                                                                                                                                              ",
    "------------------": " ----------------------------------------------------------------------- DEVELOPER TOOLS ------------------------------------------------------------------------------------ ",
    "build": "rimraf ./client/.next/; next build client;                                                                                                                                                 ",
    "package-versions": "npm list --depth=0;                                                                                                                                                             ",
    "-----------": "                                                                                                                                                                                     ",
    "-------------------": "---------------------------------------------------- MISCELLANEOUS (Helpers for scripts above, not meant for calling) ------------------------------------------------------ ",
    "microsvcs-nextjs-dev": "pm2 delete nextjs-dev; NODE_ENV=development ARCHITECTURE=nextjs-microservice pm2 start --name nextjs-dev --watch --ignore-watch 'session_store' ./server/index.js;          ",
    "microsvcs-api-server-dev": "pm2 delete api-server-dev; ARCHITECTURE=api-server-microservice pm2 start --name api-server-dev --watch --ignore-watch 'session_store' ./server/index.js;               ",
    "microsvcs-nextjs-prod": "pm2 delete nextjs-prod; NODE_ENV=production ARCHITECTURE=nextjs-microservice pm2 start --name nextjs-prod ./server/index.js;                                               ",
    "microsvcs-api-server-prod": "pm2 delete api-server-prod; ARCHITECTURE=api-server-microservice pm2 start --name api-server-prod ./server/index.js;                                                   ",
    "------------": "                                                                                                                                                                                    ",
    "-----------------": "-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"
  },
  "author": "Joshua Quek",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "connect-loki": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "helmet": "^3.15.0",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "jwt-decode": "^2.2.0",
    "knex": "^0.16.3",
    "lodash": "^4.17.11",
    "lokijs": "^1.5.5",
    "moment": "^2.23.0",
    "moment-timezone": "^0.5.23",
    "morgan": "^1.9.1",
    "next": "^7.0.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "permit": "^0.2.4",
    "pg": "^7.7.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-easy-state": "^6.0.6",
    "signale": "^1.3.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "nodemon": "^1.18.9",
    "pm2": "^3.2.2",
    "rimraf": "2.6.2",
    "standard": "^12.0.1"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
